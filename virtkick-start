#!/bin/sh
cd $(dirname $0)

if ! [ -e webapp ] || ! [ -e backend ];then
  echo "Pulling backend and webapp submodules"
	git submodule update --recursive
fi

. setup/node.sh
if ! [ -e node_modules ];then
npm install
fi
. setup/ruby.sh

. setup/python.sh

node starter.js $*

# Remember error
rc=$?
if [[ $rc != 0 ]] ; then
    exit $rc
fi
